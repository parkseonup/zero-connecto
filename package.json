{
  "scripts": {
    "dev": "run-p watch serve",
    "serve": "live-server public --host=localhost --port=8080 --no-browser",
    "compile": "tailwindcss --input src/tailwind.css --output public/assets/styles/main.css",
    "watch": "npm run compile -- --watch",
    "build": "tailwindcss --input src/tailwind.css --output public/assets/styles/build.min.css --minify"
  },
  "devDependencies": {
    "live-server": "1.2.2",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "3.1.8"
  }
}
