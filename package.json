{
  "private": true,
  "name": "cross-direction-carousel-with-sass",
  "version": "0.0.1",
  "description": "Sass 미니 프로젝트",
  "scripts": {
    "dev": "run-p compile serve",
    "serve": "live-server public --host=localhost --port=3000 --no-browser",
    "compile": "sass src/sass:public/assets/styles --update --watch",
    "build": "npm run compile -- --stylie compressed --no-source-map",
    "clear": "rimraf -rf public/assets/css"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
